generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Prompt {
  id      Int   @id @default(autoincrement())
  content String
  answer  String
  unit    Unit  @relation(fields: [unitId], references: [id])
  unitId  Int
}

model Unit {
  id      Int      @id @default(autoincrement())
  name    String
  lang    Lang     @relation(fields: [langId], references: [id])
  langId  Int
  prompts Prompt[]
  progress Progress[]
}

model Lang {
  id    Int    @id @default(autoincrement())
  name  String
  units Unit[]
}

model Progress {
  id            Int      @id @default(autoincrement())
  deviceId      String
  unit          Unit     @relation(fields: [unitId], references: [id])
  unitId        Int
  currentPrompt Int      @default(0)
  completed     Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([deviceId, unitId])
}
